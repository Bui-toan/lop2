<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TranngChuFragment"
    android:background="#BFBFBC"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:name="com.example.lop2.fragments.BannerFragment"
            android:id="@+id/fmTrangChu_fragmentBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.example.lop2.fragments.PlaylistFragment"
            android:id="@+id/fmTrangChu_fragmentPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.example.lop2.fragments.ChuDeFragment"
            android:id="@+id/fmTrangChu_fragmentChuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.example.lop2.fragments.TheLoaiFragment"
            android:id="@+id/fmTrangChu_fragmentTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.example.lop2.fragments.AlbumFragment"
            android:id="@+id/fmTrangChu_fragmentAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.example.lop2.fragments.BaiHatNgauNhienFragment"
            android:id="@+id/fmTrangChu_fragmentBaiHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>